<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flutter E2E Test Suite" parallel="classes" thread-count="3">
    <test name="Registration and Login Tests">
        <classes>
            <class name="com.teambuilder.tests.RegistrationTest"/>
            <class name="com.teambuilder.tests.LoginTest"/>
        </classes>
    </test>
    <test name="Onboarding Tests">
        <classes>
            <class name="com.teambuilder.tests.OnboardingTest"/>
        </classes>
    </test>
    <test name="Sport Selection Tests">
        <classes>
            <class name="com.teambuilder.tests.SportSelectionTest"/>
        </classes>
    </test>
    <test name="Team Creation Tests">
        <classes>
            <class name="com.teambuilder.tests.TeamCreationTest"/>
            <class name="com.teambuilder.tests.TeamCreationAdvancedTest"/>
            <class name="com.teambuilder.tests.TeamCreationWithoutSkillsTest"/>
        </classes>
    </test>
</suite>
